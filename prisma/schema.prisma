model User {
  id       String  @id @default(cuid())
  name     String?
  email    String  @unique
  password String?
  avatar   String?

  // Relations
  messages Message[]
  chats    ChatMember[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Chat {
  id String @id @default(cuid())

  //name For group chats
  name String?

  isGroup Boolean @default(false)
  avatar  String?

  // Relations
  members  ChatMember[]
  messages Message[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("chats")
}

model ChatMember {
  id String @id @default(cuid())

  // Relations
  userId String?
  chatId String
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)
  chat   Chat    @relation(fields: [chatId], references: [id])

  @@unique([userId, chatId])
  @@map("chat_members")
}

model Message {
  id   String  @id @default(cuid())
  text String?

  // Relations
  userId String? // Make optional
  chatId String
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)
  chat   Chat    @relation(fields: [chatId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("messages")
}
